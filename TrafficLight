class TrafficLight:
  def __init__(self, greenTime,yellowTime,redTime):
    self.greenTime = greenTime;
    self.yellowTime = yellowTime;
    self.redTime = redTime;
    self.cycleTime =greenTime + yellowTime + redTime
    self.northLight = None;
    self.eastLight = None;
    self.westLight = None;
    return

  def setup(self):
      self.northLight = TrafficLight(self.greenTime,self.yellowTime,self.redTime);
      self.eastLight = TrafficLight(self.greenTime, self.yellowTime, self.redTime);
      self.westLight = TrafficLight(self.greenTime, self.yellowTime, self.redTime);